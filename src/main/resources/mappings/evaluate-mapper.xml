<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdw.mapper.EvaluateMapper">
	<!--mybatis ehcache缓存配置 -->
	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 <cache type="org.mybatis.caches.ehcache.LoggingEhcache" 
		/> -->
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	<!-- 以下与实体类的中字段一致 -->
	<sql id="selectId">
		id,
		evaluateCode,
		evaluateName,
		(select name from target  where id=evaluate.target) target,
		object,
		batch,
		number,
		startdate,
		enddate
	</sql>

	<select id="findEvaluatePage" resultType="com.sdw.entity.EvaluateFormMap">
		select
		<include refid="selectId" />
		from evaluate
		where 1 = 1
		<if test="evaluateName != null and evaluateName != ''">
		and evaluateName like '%${evaluateName}%'
		</if>
		<if test="evaluateCode != null and evaluateCode != ''">
		and evaluateCode like '%${evaluateCode}%'
		</if>
		<if test="column != null">
          order by ${column} ${sort}
        </if>
	</select>
	
	<select id="findEvaluate" resultType="com.sdw.entity.EvaluateFormMap">
	    select
		<include refid="selectId" />
		from evaluate
	</select>
</mapper>